<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users | User Management</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <%- include('partials/header') %>
    
    <div class="container">
        <% if(success_msg.length > 0){ %>
            <div class="alert alert-success">
                <%= success_msg %>
            </div>
        <% } %>
        
        <% if(error_msg.length > 0){ %>
            <div class="alert alert-danger">
                <%= error_msg %>
            </div>
        <% } %>
        
        <div class="card">
            <h1 class="card-title">User Management</h1>
            
            <div class="search-container">
                <input type="text" id="searchInput" class="search-input" placeholder="Search by username or email...">
            </div>
            
            <% if(users.length === 0) { %>
                <div class="text-center">
                    <p>No users found. Add a new user to get started.</p>
                    <a href="/user/new" class="btn btn-success mt-2">Add User</a>
                </div>
            <% } else { %>
                <div class="table-container">
                    <table id="usersTable">
                        <thead>
                            <tr>
                                <th class="sortable">ID</th>
                                <th class="sortable">Username</th>
                                <th class="sortable">Email</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach(user => { %>
                                <tr>
                                    <td><%= user.id %></td>
                                    <td><%= user.username %></td>
                                    <td><%= user.email %></td>
                                    <td>
                                        <div style="display: flex; gap: 5px;">
                                            <a href="/user/<%= user.id %>/edit" class="btn">Edit</a>
                                            <a href="/user/<%= user.id %>/delete" class="btn btn-danger delete-btn">Delete</a>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
                
                <div class="text-center mt-3">
                    <a href="/user/new" class="btn btn-success">Add New User</a>
                </div>
            <% } %>
        </div>
    </div>
    
    <script src="/js/main.js"></script>
</body>
</html>